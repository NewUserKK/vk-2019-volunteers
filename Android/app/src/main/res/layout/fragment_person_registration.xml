<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/person_registration_edit_name"
            style="@style/AppTheme.OptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_name"
            app:layout_constraintBottom_toTopOf="@id/person_registration_edit_surname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/person_registration_edit_surname"
            style="@style/AppTheme.OptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_surname"
            app:layout_constraintBottom_toTopOf="@id/person_registration_edit_patronymic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person_registration_edit_name" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/person_registration_edit_patronymic"
            style="@style/AppTheme.OptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_patronymic"
            app:layout_constraintBottom_toTopOf="@id/person_registration_edit_birth_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person_registration_edit_surname" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/person_registration_edit_birth_date"
            style="@style/AppTheme.OptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_birth_date"
            app:layout_constraintBottom_toTopOf="@id/person_registration_edit_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person_registration_edit_patronymic" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/person_registration_edit_email"
            style="@style/AppTheme.OptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person_registration_edit_birth_date" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/person_registration_edit_phone"
            style="@style/AppTheme.OptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_phone"
            app:layout_constraintBottom_toTopOf="@id/person_registration_edit_vk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person_registration_edit_email" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/person_registration_edit_vk"
            style="@style/AppTheme.OptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_vk"
            app:layout_constraintBottom_toTopOf="@id/person_registration_commit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person_registration_edit_phone" />

        <Button
            android:id="@+id/person_registration_commit_button"
            style="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person_registration_edit_vk" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>